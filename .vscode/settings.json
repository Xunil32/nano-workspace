{
    "cmake.parallelJobs": 6,
    "cmake.sourceDirectory": "${workspaceFolder}/nano-node",
    "cmake.buildDirectory": "${workspaceFolder}/vsbuild",
    "cmake.configureOnOpen": false,
    "cmake.environment": {
        "BOOST_ROOT": "../boost"
    },
    "cmake.configureSettings": {
        "NANO_TEST": "ON",
        "NANO_GUI": "ON"
    },
    "search.useIgnoreFiles": false,
    "files.exclude": {
        "**/tags": true
    },
    "search.exclude": {
        "/boost*": true,
        "/build": true,
        "/data": true,
        "/example": true,
        "/ledgercache": true,
        "/vsbuild": true
    }
}
